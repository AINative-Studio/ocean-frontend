# =============================================================================
# AINative Studio - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!
# =============================================================================

# =============================================================================
# Stripe Payment Configuration
# =============================================================================
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
VITE_STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# =============================================================================
# Railway Deployment Configuration
# =============================================================================
# These are automatically provided by Railway when deployed
# Set manually for local development if needed

# Railway Environment Detection
RAILWAY_ENVIRONMENT=production
RAILWAY_SERVICE_NAME=ainative-backend
RAILWAY_SERVICE_ID=
RAILWAY_STATIC_URL=https://your-app.up.railway.app
RAILWAY_DEPLOYMENT_ID=
RAILWAY_REPLICA_ID=

# =============================================================================
# Database Configuration (Railway Internal Networking)
# =============================================================================
# PostgreSQL - Railway provides this automatically via DATABASE_URL
# Internal format: postgresql://user:pass@postgres.railway.internal:5432/db
DATABASE_URL=postgresql://user:password@postgres.railway.internal:5432/ainative_db

# External fallback (for local development or non-Railway deployments)
DATABASE_EXTERNAL_URL=postgresql://user:password@localhost:5432/ainative_db

# Database Connection Pooling
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# Redis Configuration (Railway Internal Networking)
# =============================================================================
# Redis - Railway provides this automatically via REDIS_URL
# Internal format: redis://redis.railway.internal:6379
REDIS_URL=redis://redis.railway.internal:6379/0

# External fallback (for local development)
REDIS_EXTERNAL_URL=redis://localhost:6379/0

# Redis Connection Pooling
REDIS_POOL_SIZE=10
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# =============================================================================
# MinIO Object Storage (Railway Internal Networking)
# =============================================================================
# MinIO - Custom internal URL for Railway deployment
# Internal format: http://minio.railway.internal:9000
MINIO_INTERNAL_URL=http://minio.railway.internal:9000

# External fallback (for local development)
MINIO_EXTERNAL_URL=http://localhost:9000

# MinIO Credentials
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET_NAME=ainative-storage

# =============================================================================
# MongoDB Configuration (Optional)
# =============================================================================
# MongoDB - If using MongoDB for specific features
MONGODB_URL=mongodb://mongodb.railway.internal:27017/ainative_db
MONGODB_EXTERNAL_URL=mongodb://localhost:27017/ainative_db

# =============================================================================
# Railway Networking Configuration
# =============================================================================
# Enable/disable Railway internal networking
USE_INTERNAL_NETWORKING=true

# Enable connection pooling for better performance
ENABLE_CONNECTION_POOLING=true

# Enable health check endpoints
ENABLE_HEALTH_CHECKS=true

# =============================================================================
# Service Health & Monitoring
# =============================================================================
HEALTH_CHECK_INTERVAL=30
STARTUP_TIMEOUT=60
SHUTDOWN_TIMEOUT=30

# =============================================================================
# Application Configuration
# =============================================================================
# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=AINative Studio
DEBUG=false

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://ainative.studio"]

# =============================================================================
# Cloudflare CDN Configuration (Optional)
# =============================================================================
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_zone_id
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_ENABLED=true
CLOUDFLARE_CDN_DOMAIN=cdn.ainative.studio
CLOUDFLARE_MAIN_DOMAIN=ainative.studio

# =============================================================================
# External API Keys
# =============================================================================
# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key

# OpenAI API
OPENAI_API_KEY=your_openai_api_key

# GitHub Integration
GITHUB_TOKEN=your_github_token

# =============================================================================
# Email Service Configuration (Issue #138)
# =============================================================================
# Email Provider: smtp, sendgrid, ses, resend
EMAIL_PROVIDER=smtp

# Default Email Settings
DEFAULT_FROM_EMAIL=noreply@ainative.studio
DEFAULT_FROM_NAME=AINative Studio

# SMTP Configuration (Default Provider)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# SendGrid Configuration
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# AWS SES Configuration
# Get credentials from: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
AWS_REGION=us-east-1

# Resend Configuration
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Worker Configuration (Celery)
# =============================================================================
CELERY_BROKER_URL=redis://redis.railway.internal:6379/1
CELERY_RESULT_BACKEND=redis://redis.railway.internal:6379/2
CELERY_WORKER_CONCURRENCY=4

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# Development Settings
# =============================================================================
# Set to true for local development
LOCAL_DEVELOPMENT=false

# Hot reload in development
RELOAD=false

# Number of workers (production)
WORKERS=4
